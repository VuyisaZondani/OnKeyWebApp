@using OnKeyWebApp.Data.Enum
@model MusicClub

<h1>Are you are you want to delete this Music club?</h1>

<form nethod="post" asp-action="Delete" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title">Title of Music Club</label>
        <input asp-for="Title" class="form-control" placeholder="Title" disabled>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" placeholder="Description" disabled>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Genre">Genre</label>
        <select asp-for="Genre" asp-items="@Html.GetEnumSelectList<Genre>()" class="form-control" disabled>
            <option selected="selected" value="">--Select--</option>
        </select>
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Street">Street</label>
        <input asp-for="Street" class="form-control" placeholder="Street" disabled>
        <span asp-validation-for="Street" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Neighbourhood">Neighbourhood</label>
        <input asp-for="Neighbourhood" class="form-control" placeholder="Neighourhood" disabled>
        <span asp-validation-for="Neighbourhood" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="ProfilePicUrl">Image</label>
        <input asp-for="ProfilePicUrl" type="file" class="form-control" placeholder="image" disabled>
        <span asp-validation-for="ProfilePicUrl" class="text-danger"></span>
    </div>
</form>

<div class="form-group">
    <form action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
    </form>
</div>
