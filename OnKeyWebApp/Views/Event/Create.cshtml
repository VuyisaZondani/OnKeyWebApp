@using OnKeyWebApp.Data.Enum
@using OnKeyWebApp.ViewModel
@model CreateEventViewModel

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <h1>Create your own Event</h1>
    <div class="form-row center">
        <div class="form-group">
            <label asp-for="Title">Name of Event</label>
            <input asp-for="Title" class="form-control" placeholder="Event Name">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description of Event</label>
            <input asp-for="Description" class="form-control" placeholder="Desciption of Event">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Location">Location</label>
        <input asp-for="Location" class="form-control" placeholder="Location">
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Event</button>
</form>
